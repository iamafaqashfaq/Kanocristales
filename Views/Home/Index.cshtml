<script type="text/javascript">
    window.addEventListener('scroll', function () {
        var header = document.querySelector('header');
        header.classList.toggle('sticky', window.scrollY > 0);
    });

    function togglemenu() {
        var menutoggle = document.querySelector('.toggle');
        var menu = document.querySelector('.menu');
        menutoggle.classList.toggle('active')
        menu.classList.toggle('active')
    }

    function toggleViewMore() {
        var viewMoreToggle = document.querySelector('.viewmore-item');
        var viewMoreButton = document.querySelector('.viewmore-btn');
        if (viewMoreButton.innerHTML == "View More") {
            viewMoreButton.innerHTML = "View Less";
        } else if (viewMoreButton.innerHTML == "View Less") {
            viewMoreButton.innerHTML = "View More";
        }
        viewMoreToggle.classList.toggle('d-none');
    }

</script>
